<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#0099cc"
             tools:context=".LastBye">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:keepScreenOn="true"
              android:textColor="#33b5e5"
              android:textStyle="bold"
              android:textSize="50sp"
              android:gravity="center"
              android:text="@string/dummy_content"/>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls"
                      style="?metaButtonBarStyle"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="bottom|center_horizontal"
                      android:background="@color/black_overlay"
                      android:orientation="horizontal"
                      tools:ignore="UselessParent">
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black">


            <TextView
                    android:text="Thank you for using Nashty                   Game Theory Matrix Solver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="113dp" app:fontFamily="monospace" android:textSize="17sp"
                    android:layout_alignParentStart="true" android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>
            <TextView
                    android:text="For contributions, feedback or other inquiries, please contact olivia.berthold@hotmail.de"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" app:fontFamily="monospace" android:textSize="14sp"
                    android:textColor="#4005f3" android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="219dp"/>
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="174dp" app:srcCompat="@drawable/nashtyadd"
                    android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                    android:layout_marginEnd="32dp" android:layout_marginTop="13dp" android:id="@+id/imageView2"/>

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>